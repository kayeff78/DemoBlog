{% extends 'base.html.twig' %}

{% block title %}BlogSymfony | Identifiez-vous!{% endblock %}

{% block body %}

    {% if error %}
        <div class="col-4 bg-danger p-3 text-white text-center mx-auto my-3 ">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for message in app.flashes('success') %}

    {#  On affiche les messages utilisateurs stock√©s en session (addFlash) #}
    <div class="col-6 bg-success text-center text-white p-3 mx-auto">
    {{message}}

    </div>
        
    {% endfor %}


    <h1 class="text-center my-5">Identifiez vous</h1>

    <form method="post" class="col-6 mx-auto">

    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>

    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control m" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

         
    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-dark mt-3" type="submit">
        Valider
    </button>
</form>
{% endblock %}
